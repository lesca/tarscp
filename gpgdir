# scripts to easily run gpgtar to encrypt / decrypt directories 

# passfile 
# a file containing **one-line** passphrase
# put this file at the working directory where you run the command

gpgen() { gpgtar -c --gpg-args="--passphrase-file=passfile --batch" -o `basename $1`.gpg $1 ; }
gpgde() { gpgtar -d --gpg-args="--passphrase-file=passfile --batch" $1 ; }
gpgll() { gpgtar -t --gpg-args="--passphrase-file=passfile --batch" $1 ; }
